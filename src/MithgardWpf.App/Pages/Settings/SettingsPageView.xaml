<nav:AppPage
    x:Class="MithgardWpf.App.Pages.Settings.SettingsPageView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MithgardWpf.App.Pages.Settings"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:nav="clr-namespace:MithgardWpf.App.Core.Navigation.Views"
    Title="SettingsPageView"
    d:DesignHeight="450"
    d:DesignWidth="800"
    x:TypeArguments="local:SettingsPageViewModel"
    mc:Ignorable="d">

    <Grid>
        <StackPanel>
            <TextBlock
                Background="Red"
                FontSize="20"
                Text="Settings" />
            <Button
                Command="{Binding NavigateToHomeCommand}"
                Content="HOME" />
            <Button
                Command="{Binding NavigateToProfileCommand}"
                Content="PROFILE" />
        </StackPanel>
    </Grid>
</nav:AppPage>
