<nav:AppPage
    x:Class="MithgardWpf.App.Pages.Home.HomePageView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:aap="clr-namespace:MithgardWpf.App.Core.Animations.AttachedProperties"
    xmlns:cv="clr-namespace:MithgardWpf.App.Common.ValueConvertors"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MithgardWpf.App.Pages.Home"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:nav="clr-namespace:MithgardWpf.App.Core.Navigation.Views"
    Title="HomePageView"
    d:DataContext="{x:Static local:HomePageDesignModel.Instance}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    x:TypeArguments="local:HomePageViewModel"
    mc:Ignorable="d">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>

        <StackPanel>
            <TextBlock
                Background="Gray"
                FontSize="20"
                Text="Home" />
            <Button
                aap:AnimateSlideRightProperty.Value="{Binding IsAnimating, Converter={cv:BooleanInvertConverter}}"
                Command="{Binding NavigateToSettingsCommand}"
                Content="SETTINGS" />
            <Button
                Command="{Binding NavigateToProfileCommand}"
                Content="PROFILE" />
            <Button
                Command="{Binding NavigateToHomeCommand}"
                Content="HOME" />
            <Button
                Command="{Binding AnimateCommand}"
                Content="ANIMATE" />
            <TextBlock
                Margin="0,10,0,0"
                Background="Yellow"
                FontSize="16"
                Text="{Binding Title}" />
        </StackPanel>
    </Grid>
</nav:AppPage>
