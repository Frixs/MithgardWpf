<nav:AppPage
    x:Class="MithgardWpf.App.Pages.Profile.ProfilePageView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MithgardWpf.App.Pages.Profile"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:nav="clr-namespace:MithgardWpf.App.Core.Navigation.Views"
    Title="ProfilePageView"
    d:DesignHeight="450"
    d:DesignWidth="800"
    x:TypeArguments="local:ProfilePageViewModel"
    mc:Ignorable="d">

    <Grid>
        <StackPanel>
            <TextBlock
                Background="LightBlue"
                FontSize="20"
                Text="Profile" />
            <Button
                Command="{Binding NavigateToSettingsCommand}"
                Content="SETTINGS" />
            <Button
                Command="{Binding NavigateToHomeCommand}"
                Content="HOME" />
            <TextBlock
                Margin="0,10,0,0"
                Background="LightGreen"
                FontSize="16"
                Text="{Binding Name}" />
        </StackPanel>
    </Grid>
</nav:AppPage>
